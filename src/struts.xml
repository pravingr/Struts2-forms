<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
		"http://struts.apache.org/dtds/struts-2.5.dtd">


<struts>

	<package name="forms" namespace="/"
		extends="struts-default">
		<action name="login"
			class="pgrdevelopers.strutsforms.actions.LoginAction">
			<result name="success">view/home.jsp</result>
			<result name="input">view/login.jsp</result>
		</action>
		<action name="register"
			class="pgrdevelopers.strutsforms.actions.RegisterAction">
			<result name="success">view/login.jsp</result>
			<result name="input">register.jsp</result>
		</action>

	</package>
</struts>	